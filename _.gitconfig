[user]
name = Alex Bepple
email = alex@bepple.de

[init]
  defaultBranch = main

[alias]
  # https://stackoverflow.com/questions/2363197
  ignored = !git ls-files -v | grep "^[[:lower:]]"
[core]
	editor = pkgx hx
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
[merge]
	conflictStyle = zdiff3
